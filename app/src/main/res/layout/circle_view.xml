<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <cn.septenary.ui.widget.GradientProgressBar
        android:id="@+id/bar2"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:visibility="visible"
        app:anim_duration="500"
        app:border_background="#66FFFFFF"
        app:border_width="30dp"
        app:end_color="#008000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progress="0"
        app:progress_max="100"
        app:rotate="-90"
        app:start_color="#38B000" />

    <cn.septenary.ui.widget.GradientProgressBar
        android:id="@+id/bar4"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:visibility="visible"
        app:anim_duration="500"
        app:border_background="#66FFFFFF"
        app:border_width="30dp"
        app:end_color="#008000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progress="0"
        app:progress_max="100"
        app:rotate="-90"
        app:start_color="#3500B0" />

    <cn.septenary.ui.widget.GradientProgressBar
        android:id="@+id/bar3"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:visibility="visible"
        app:anim_duration="500"
        app:border_background="#66FFFFFF"
        app:border_width="30dp"
        app:end_color="#3F1EFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progress="0"
        app:progress_max="100"
        app:rotate="-90"
        app:start_color="#AC69FF" />
</androidx.constraintlayout.widget.ConstraintLayout>