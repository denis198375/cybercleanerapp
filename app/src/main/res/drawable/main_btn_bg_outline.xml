<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/white"
    tools:targetApi="lollipop"> <!-- ripple effect color -->
    <item android:id="@android:id/background">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
            <item>
                <shape android:shape="rectangle" >
                    <gradient
                        android:angle="0"
                        android:startColor="#3F1EFF"
                        android:type="linear"
                        android:endColor="#AC69FF" />
                    <size android:width="152dp"
                        android:height="53dp"/>
                    <corners android:radius="50dp"/>
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
                <shape>
                    <gradient
                        android:startColor="#555555"
                        android:angle="180"
                        android:endColor="#555555" />
                    <corners android:radius="50dp"/>
                </shape>

            </item>

            <item
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
                <shape>
                    <gradient
                        android:angle="0"
                        android:startColor="#1A3F1EFF"
                        android:type="linear"
                        android:endColor="#1A3F1EFF" />
                    <corners android:radius="50dp"/>
                </shape>

            </item>

        </layer-list>
    </item>
</ripple>
